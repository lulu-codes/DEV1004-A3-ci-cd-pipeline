# Backend .dockerignore file - Excludes files from Docker build context
# (For faster builds, smaller image and better security)

# Ignore dependencies
# node modules - as they will be installed fresh in build
node_modules
npm-debug.log*
yarn.lock
.yarn/

# Ignore log files
*.log
logs/

# Ignore environment variable files
.env
.env*

# Ignore version control git files
.git
.gitignore

# Ignore IDE files and folders
.vscode

# Ignore build artifacts
dist/
.vite
build

# Ignore CICD files
.github/

# Docker files - prevent recursion issues and shouldn't be in the image itself
Dockerfile*
docker-compose*.yml
.dockerignore

# OS-specific files - shouldn't be in containers
.DS_Store        # macOS
Thumbs.db        # Windows
desktop.ini      # Windows